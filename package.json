{
  "name": "absolute-desktop",
  "version": "1.0.5",
  "description": "App de escritorio de Absolute de Nicaragua",
  "main": "main.js",
  "author": "Bayardo Davila",
  "scripts": {
    "start": "electron-forge start",
    "dist:win": "electron-builder --win --x64",
    "dist:mac": "electron-builder --mac",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.84.0",
    "electron-squirrel-startup": "^1.0.1",
    "electron-updater": "^6.7.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.10.2",
    "@electron-forge/maker-deb": "^7.11.1",
    "@electron-forge/maker-rpm": "^7.11.1",
    "@electron-forge/maker-squirrel": "^7.11.1",
    "@electron-forge/maker-zip": "^7.11.1",
    "@electron-forge/plugin-auto-unpack-natives": "^7.11.1",
    "@electron-forge/plugin-fuses": "^7.11.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.6.0",
    "electron-prebuilt-compile": "^8.2.0"
  },
  "build": {
    "productName": "Absolute de Nicaragua",
    "appId": "com.absolute.nicaragua",
    "asar": true,
    "asarUnpack": [
      "node_modules/electron-updater"
    ],
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Absolute de Nicaragua",
      "perMachine": true,
      "runAfterFinish": true,
      "include": "build/installer.nsh",
      "license": "build/license.txt",
      "installerSidebar": "build/installerSidebar.bmp",
      "installerHeader": "build/installerHeader.bmp",
      "warningsAsErrors": false
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns",
      "category": "public.app-category.business"
    },
    "dmg": {
      "title": "Instalador Absolute Nicaragua",
      "iconSize": 100,
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "files": [
      "**/*",
      "!**/*.sql",
      "!**/*.md",
      "!**/*.log",
      "!dist",
      "!release",
      "!out",
      "!build",
      "!releases",
      "!desktop",
      "!mobile",
      "!tools",
      "!sql",
      "!_terminal_test.txt",
      "!db-usage-report.txt",
      "!node_modules/.bin",
      "!node_modules/electron",
      "!node_modules/electron-prebuilt-compile",
      "!node_modules/@electron-forge",
      "!node_modules/electron-builder",
      "!node_modules/app-builder-bin"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Bayardojavier/desktop.git"
  },
  "publish": {
    "provider": "github",
    "owner": "Bayardojavier",
    "repo": "desktop"
  }
}
