{
  "name": "absolute-desktop",
  "version": "1.3.7",
  "description": "App de escritorio de Absolute de Nicaragua",
  "main": "main.js",
  "author": "Bayardo Davila",
  "scripts": {
    "start": "electron-forge start",
    "build": "node -e \"console.log('Build: no hay paso adicional')\"",
    "pack": "npm run dist:win",
    "dist:win": "electron-builder --win --x64",
    "dist:mac": "electron-builder --mac",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "make:archivar": "node scripts/archive-and-make.js",
    "publish:win": "electron-builder --win --x64 --publish=onTagOrDraft && rmdir /s /q temp_build"
    ,"test:devolucion": "node scripts/test_devolucion_calculo.js",
    "test:devolucion:db": "node scripts/test_devolucion_db.js"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.84.0",
    "electron-squirrel-startup": "^1.0.1",
    "electron-updater": "^6.7.3",
    "fs-extra": "^10.1.0",
    "git": "^0.1.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tslib": "^2.8.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.11.1",
    "@electron-forge/maker-deb": "^7.11.1",
    "@electron-forge/maker-rpm": "^7.11.1",
    "@electron-forge/maker-squirrel": "^7.11.1",
    "@electron-forge/maker-zip": "^7.11.1",
    "@electron-forge/plugin-auto-unpack-natives": "^7.11.1",
    "@electron-forge/plugin-fuses": "^7.11.1",
    "@types/node": "^25.0.10",
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "electron-prebuilt-compile": "^8.2.0"
  },
  "build": {
    "productName": "Absolute de Nicaragua",
    "appId": "com.absolute.nicaragua",
    "asar": true,
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "Bayardojavier",
        "repo": "desktop"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "dir",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico",
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Absolute de Nicaragua",
      "perMachine": true,
      "runAfterFinish": true,
      "include": "build/installer.nsh",
      "license": "build/license.txt",
      "installerSidebar": "build/installerSidebar.bmp",
      "installerHeader": "build/installerHeader.bmp",
      "warningsAsErrors": false
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns",
      "category": "public.app-category.business"
    },
    "dmg": {
      "title": "Instalador Absolute Nicaragua",
      "iconSize": 100,
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "files": [
      "**/*",
      "!**/*.sql",
      "!**/*.md",
      "!**/*.log",
      "!test*.js",
      "!verificar*.js",
      "!simulacion*.js",
      "!debug*.js",
      "!buscar_*.js",
      "!ejecutar_*.js",
      "!explorar_*.js",
      "!dist{,/**}",
      "!release{,/**}",
      "!out{,/**}",
      "!out_archive{,/**}",
      "!build{,/**}",
      "!releases{,/**}",
      "!desktop{,/**}",
      "!mobile{,/**}",
      "!tools{,/**}",
      "!sql{,/**}",
      "!_terminal_test.txt",
      "!db-usage-report.txt",
      "!build_output{,/**}",
      "!installer_output{,/**}",
      "!installer_build{,/**}",
      "!final_output{,/**}",
      "!temp_build{,/**}",
      "!node_modules/.bin{,/**}",
      "!node_modules/electron{,/**}",
      "!node_modules/electron-prebuilt-compile{,/**}",
      "!node_modules/@electron-forge{,/**}",
      "!node_modules/electron-builder{,/**}",
      "!node_modules/app-builder-bin{,/**}"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Bayardojavier/desktop.git"
  },
  "publish": {
    "provider": "github",
    "owner": "Bayardojavier",
    "repo": "desktop"
  }
}
